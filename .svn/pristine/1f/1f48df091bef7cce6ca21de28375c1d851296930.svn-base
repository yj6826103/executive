<template><!--航班量统计-->
	<div class="statisticAnalysis">
		<div class="yanqiBox">
            <div class="box">
                <div class="lbox">
                    <div class="ybq">
                        <span>查询条件</span>
                    </div>
                </div>
                <div class="rbox">
                    <div class="infobox">
                        <div class="rbbq">
                            <div class="tit"><i class="el-icon-caret-right"></i>统计时间</div>
                            <div class="cen">
                                <el-date-picker v-model="beginDate" type="date" placeholder="选择开始日期" value-format="yyyy-MM-dd HH:mm:ss"></el-date-picker>
                                <i class="el-icon-date"></i> 
                            </div>
                        </div>
                        <div class="rbbq">
                            <div class="tit">至</div>
                            <div class="cen">
                                <el-date-picker v-model="endDate" type="date" placeholder="选择结束时间" value-format="yyyy-MM-dd HH:mm:ss"></el-date-picker>
                                <i class="el-icon-date"></i> 
                            </div>
                        </div>
                        <div class="rbbq">
                            <div class="tit"><i class="el-icon-caret-right"></i>代理公司</div>
                            <div class="cen">
                                <el-input type="text" v-model="comName" class="text" placeholder="请输入"clearable></el-input>
                            </div>
                        </div>
                        <div class="rbbq">
                            <div class="tit"><i class="el-icon-caret-right"></i>任务性质</div>
                            <div class="cen">
                                <flgt-type v-bind:flgtType="orderFlgtTypeCode" v-on:change="updateOrderFlgtTypeCode"></flgt-type>
                            </div>
                        </div>
                        <div class="rbbq">
                            <div class="tit"><i class="el-icon-caret-right"></i>机型</div>
                            <div class="cen">
                            <el-input type="text" v-model="orderActypeCode" class="text" placeholder="请输入"clearable></el-input>
                            </div>
                        </div>
                        <div class="rbbq">
                            <div class="tit"><i class="el-icon-caret-right"></i>停靠机场</div>
                            <div class="cen">
                                <stop-arpt v-bind:arpt="orderArptCode" v-on:success="updateOrderArptCode"></stop-arpt>
                            </div>
                        </div>
                        <div class="rbbq">
                            <div class="tit"><i class="el-icon-caret-right"></i>机位等级</div>
                            <div class="cen">
                                <stnd-level v-bind:stndLevel="stndLevel" v-on:change="updateStndLevel"></stnd-level>
                            </div>
                        </div>
                        <div class="btnbox">
                            <el-button type="primary" icon="el-icon-search" @click="getdatas">查  询</el-button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box table-box">
                <div class="left">
                    <div class="main-top-left"></div>
                    <div class="main-top-right"></div>
                    <div class="main-bottom"></div>
                </div>
                <div class="right">
                    <div class="main-right-top"></div>
                    <div class="main-right-bottom"></div>
                </div>
            </div>
        </div>
	</div>
</template>

<script>
import { mapGetters, mapMutations } from 'vuex'
import qs from 'qs'
import echarts from 'echarts'
import stopArpt from '../simpleComponent/StopArpt'
import flgtType from '../simpleComponent/FlgtType'
import stndLevel from '../simpleComponent/StndLevel'
export default {
  components: {
    stopArpt,
    flgtType,
    stndLevel
  },
  computed: {
    ...mapGetters(['selectFalse', 'FILE_SERVER_URL'])
  },
  data() {
    return {
      beginDate: '',
      endDate: '',
      comName: '',
      orderFlgtTypeCode: '',
      orderActypeCode: '',
      orderSlvlCode: '',
      orderArptCode: '',
      stndLevel: [],
      pieChart: null,
      vBarChart: null,
      hBarChart: null,
      hABarChart: null,
      hDBarChart: null,
      actypeData: { names: [], data: [] }, // 饼图数据：机型-时长
      flgtTypeData: { names: [], values: [] }, // 柱状图数据：飞机注册号-时长
      comNameData: { names: [], values: [] }, // 条形图数据：代理公司-时长
      comNameAData: { names: [], values: [] }, // 条形图数据：代理公司 进港-时长
      comNameDData: { names: [], values: [] } // 条形图数据：代理公司 离港-时长
    }
  },
  created() {
    // 默认显示最近一周数据
    let now = new Date()
    this.beginDate = this.$formatDate(
      new Date(now.getTime() - 7 * 24 * 60 * 60 * 1000),
      'yyyy-MM-dd HH:mm:ss'
    )
    this.endDate = this.$formatDate(now, 'yyyy-MM-dd HH:mm:ss')
  },
  mounted() {
    this.getdatas()
  },
  methods: {
    getdatas() {
      let _this = this
      _this.clearEchart()
      let param = qs.stringify({
        beginDate: _this.beginDate,
        endDate: _this.endDate,
        comName: _this.comName,
        orderFlgtTypeCode: _this.orderFlgtTypeCode,
        orderActypeCode: _this.orderActypeCode,
        orderArptCode: _this.orderArptCode,
        orderSlvlCode: _this.orderSlvlCode,
        stndLevels: _this.stndLevel
      })
      _this.$http
        .post('/statisticAnalysis/countStatisticChart', param, {
          headers: {
            Authorization: localStorage.getItem('token'),
            page: _this.currentPages,
            limit: _this.pagesize
          }
        })
        .then(function(res) {
          if (res.data.status == '100') {
            if (res.data.data.actypeData != null) {
              _this.actypeData = res.data.data.actypeData
              _this.flgtTypeData = res.data.data.flgtTypeData
              _this.comNameData = res.data.data.comNameData
              _this.comNameAData = res.data.data.comNameAData
              _this.comNameDData = res.data.data.comNameDData

              if (_this.actypeData != null) {
                _this.initPieChart()
              }
              if (_this.flgtTypeData != null) {
                _this.initVBarChart()
              }
              if (_this.comNameData != null) {
                _this.initHBarChart()
              }
              if (_this.comNameAData != null) {
                _this.initHABarChart()
              }
              if (_this.comNameDData != null) {
                _this.initHDBarChart()
              }
            }
          }
        })
        .catch(function(err) {
          console.log(err)
        })
    },
    initPieChart() {
      this.pieChart = echarts.init(document.querySelector('.main-top-left'))
      this.pieChart.setOption({
        title: {
          text: '航班量统计',
          subtext: '机型占比',
          x: 'center'
        },
        tooltip: {
          trigger: 'item',
          formatter: '{a} <br/>{b} : {c} ({d}%)'
        },
        legend: {
          orient: 'vertical',
          left: 'left',
          data: this.actypeData.names
        },
        series: [
          {
            name: '机型',
            type: 'pie',
            radius: '55%',
            center: ['50%', '60%'],
            data: this.actypeData.data,
            itemStyle: {
              emphasis: {
                shadowBlur: 10,
                shadowOffsetX: 0,
                shadowColor: 'rgba(0, 0, 0, 0.5)'
              }
            }
          }
        ]
      })
    },
    initVBarChart() {
      this.vBarChart = echarts.init(document.querySelector('.main-top-right'))
      this.vBarChart.setOption({
        title: {
          text: '航班量统计',
          x: 'center'
        },
        color: ['#3398DB'],
        tooltip: {
          trigger: 'axis',
          axisPointer: {
            // 坐标轴指示器，坐标轴触发有效
            type: 'shadow' // 默认为直线，可选为：'line' | 'shadow'
          }
        },
        grid: {
          left: '3%',
          right: '4%',
          bottom: '3%',
          containLabel: true
        },
        xAxis: [
          {
            type: 'category',
            data: this.flgtTypeData.names,
            axisTick: {
              alignWithLabel: true
            }
          }
        ],
        yAxis: [
          {
            type: 'value'
          }
        ],
        series: [
          {
            name: '数量',
            type: 'bar',
            barWidth: '60%',
            data: this.flgtTypeData.values
          }
        ]
      })
    },
    initHBarChart() {
      this.hBarChart = echarts.init(document.querySelector('.main-bottom'))
      this.hBarChart.setOption({
        title: {
          text: '航班量统计',
          x: 'center'
        },
        tooltip: {
          trigger: 'axis',
          axisPointer: {
            type: 'shadow'
          }
        },
        grid: {
          left: '3%',
          right: '4%',
          bottom: '3%',
          containLabel: true
        },
        xAxis: {
          type: 'value',
          boundaryGap: [0, 0.01]
        },
        yAxis: {
          type: 'category',
          data: this.comNameData.names
        },
        series: [
          {
            name: '数量',
            type: 'bar',
            data: this.comNameData.values
          }
        ]
      })
    },
    initHABarChart() {
      let text = this.beginDate + '-' + this.endDate
      this.hABarChart = echarts.init(document.querySelector('.main-right-top'))
      this.hABarChart.setOption({
        title: {
          text: '进港统计',
          x: 'center'
        },
        tooltip: {
          trigger: 'axis',
          axisPointer: {
            type: 'shadow'
          }
        },
        legend: {
          data: ['计划', '实际'],
          x: 'left'
        },
        grid: {
          left: '3%',
          right: '4%',
          bottom: '3%',
          containLabel: true
        },
        xAxis: {
          type: 'value',
          boundaryGap: [0, 0.01]
        },
        yAxis: {
          type: 'category',
          data: this.comNameAData.names
        },
        series: [
          {
            name: '计划',
            type: 'bar',
            data: this.comNameAData.values
          },
          {
            name: '实际',
            type: 'bar',
            data: this.comNameAData.values
          }
        ]
      })
    },
    initHDBarChart() {
      this.hDBarChart = echarts.init(
        document.querySelector('.main-right-bottom')
      )
      this.hDBarChart.setOption({
        title: {
          text: '离港统计',
          x: 'center'
        },
        tooltip: {
          trigger: 'axis',
          axisPointer: {
            type: 'shadow'
          }
        },
        legend: {
          data: ['计划', '实际'],
          x: 'left'
        },
        grid: {
          left: '3%',
          right: '4%',
          bottom: '3%',
          containLabel: true
        },
        xAxis: {
          type: 'value',
          boundaryGap: [0, 0.01]
        },
        yAxis: {
          type: 'category',
          data: this.comNameDData.names
        },
        series: [
          {
            name: '计划',
            type: 'bar',
            data: this.comNameDData.values
          },
          {
            name: '实际',
            type: 'bar',
            data: this.comNameDData.values
          }
        ]
      })
    },
    clearEchart() {
      if (this.pieChart != null) {
        this.pieChart.clear()
      }
      if (this.vBarChart != null) {
        this.vBarChart.clear()
      }
      if (this.hBarChart != null) {
        this.hBarChart.clear()
      }
      if (this.hABarChart != null) {
        this.hABarChart.clear()
      }
      if (this.hDBarChart != null) {
        this.hDBarChart.clear()
      }
    },
    updateOrderArptCode(val) {
      this.orderArptCode = val
    },
    updateOrderFlgtTypeCode(val) {
      this.orderFlgtTypeCode = val[0]
      if (val.length == 2) {
        this.orderSlvlCode = val[1]
      }
    },
    updateStndLevel(val) {
      this.stndLevel = val
    }
  }
}
</script>

