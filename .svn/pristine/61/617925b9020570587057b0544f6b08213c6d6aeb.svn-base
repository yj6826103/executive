import axios from 'axios'
import {Loading,Notification,MessageBox } from 'element-ui'

// 超时时间
 axios.defaults.timeout = 5000
// http请求拦截器
var loadinginstace
axios.interceptors.request.use(config => {//console.log(localStorage.getItem("token"))
// console.log(this.$store)
  // element ui Loading方法
      // if(config.headers.Authorization==''||config.headers.Authorization==null||config.headers.Authorization==undefined){//超过4小时，返回登录
      //       MessageBox.alert('登录已超时，是否返回登录页面', '提示', {
      //             dangerouslyUseHTMLString: true
      //       }).then(() => {
      //             window.location.href="/";
      //       }).catch(() => {
      //             return
      //       });            
      // }
      loadinginstace = Loading.service({
        fullscreen: true
      })
      return config
}, error => {
      loadinginstace.close()
      Notification.warning({
            title: '提示',
            message: '加载失败',
            offset: 100
          })
      return Promise.reject(error)
})
// http响应拦截器
axios.interceptors.response.use(data => {//console.log(data) // 响应成功关闭loading     
      loadinginstace.close()
       if(data.data.status=='103'){//超过4小时，返回登录 
            Notification.warning({
                  title: '提示',
                  message: '登录信息失效，请重新登录',
                  offset: 100
            })
            setTimeout(() => {
                  window.location.href="/";
            },2000)  
                   
      }
      return data
}, error => {
      console.log(error)
      loadinginstace.close()     
      Notification.warning({
            title: '提示',
            message: '服务器繁忙，请稍后再试 ！',
            offset: 100
      })      
      return Promise.reject(error)
})

export default axios

