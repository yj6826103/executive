        "O",
        "P",
        "Q",
        "R",
        "S",
        "T",
        "U",
        "V",
        "W",
        "X",
        "Y",
        "Z"
      );
      var codes = "";
      for (let i = 0; i < 4; i++) {
        let r = parseInt(Math.random() * arrays.length);
        codes += arrays[r];
      }
      this.code = codes;
    },
    showlogin() {
      this.showlog = true;
    }
  }
};
